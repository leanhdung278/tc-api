{
  "rules": {
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-internal-module": true,
    "no-var-keyword": true,
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-open-brace",
      "check-whitespace"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "jsdoc-format": true,
    "no-consecutive-blank-lines": true,
    "one-variable-per-declaration": [
      true,
      "ignore-for-loop"
    ],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": "never"
      }
    ],
    "align": [
      true,
      "parameters",
      "statements"
    ]
  }
}